<div class="product-edit">
  {{#if error}}
  <div class="error">
    An error has been detected
  </div>
  {{/if}}
  <form method="POST" action="/create">
    <div class="field">
      <label for="iname">Product name</label>
      <input type="text" id="iname" name="name" value="{{product.name}}" />
    </div>
    <div class="field">
      <label for="iqty">Stock quantity</label>
      <input type="number" id="iqty" name="qty" value="{{product.qty}}" />
    </div>
    <div class="commands">
      <button type="button" onclick="window.location.href='/'">Cancel</button>
      <button type="submit">Submit</button>
    </div>
  </form>
</div>